<h1>Profile Page</h1>

<h3 class="username">{{user.username}}</h3> 
<img style="width:150px; height:225px; object-fit:cover;"  src={{user.profilePicture}}>

<h3 class="bio">{{user.bio}}</h3> 

<a href="/users/{{user.id}}/edit ">Edit Profile</a>
<h3>Your Posts</h3>
{{#each userPosts}}

  <li>{{this.message}} - {{this.createdAt}} - {{#each this.author}}{{this.username}}{{/each}}
    {{#each images}}
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
    <img src="{{this.url}}" alt="image" class="class img-fluid" width="100" height="100" ;>
    {{/each}}
            </div>
        </div>
    </div>
    
    <form action='/posts/{{this.id}}/delete' method='post'>
    <input type='submit' value='Delete'>
    </form>
    <form action='/posts/{{this.id}}/edit' method='get'>
    <input type='submit' value='Edit'>
    </form>
  </li>

  {{/each}}
