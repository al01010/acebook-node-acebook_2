  #acebook-title {
    font-family: 'Bebas Neue', sans-serif;
    padding-top: 180px;
  }
  #welcome {
      width: 70%;
      padding-left: 50px;
  }
  #buttons {
      padding-top: 230px;
      width: 70%;
      float: right;
      padding-right: 50px;
  }
  body {
      background-image: url('https://res.cloudinary.com/diw18eqtr/image/upload/v1619628549/Untitled_design_sg4wph.gif');
      background-repeat repeat;
  }
