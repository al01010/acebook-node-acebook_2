<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}} - {{this.createdAt}} - {{this.user.email}}
    {{#each images}}
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
    <img src="{{this.url}}" alt="image" class="class img-fluid" width="100" height="100" ;>
    {{/each}}
            </div>
        </div>
    </div>
    
    <form action='/posts/{{this.id}}/delete' method='post'>
    <input type='submit' value='Delete'>
    </form>
    <form action='/posts/{{this.id}}/update' method='get'>
    <input type='submit' value='Update'>
    </form>
  </li>
  {{/each}}
</ul>
<form action="/posts/sorted" method="get"> 
  <input type="submit" value="Sort">
</form>
<a class="new-post-link" href="/posts/new">New post</a>

<form id="log-out-form" action="/users/logout" method="post">
  <button value = "Log Out">Log out</button>
</form>