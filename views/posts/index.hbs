<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}} - {{this.createdAt}}
    <form action='/posts/{{this.id}}/delete' method='post'>
    <input type='submit' value='Delete'>
    </form>
    <form action='/posts/{{this.id}}/update' method='get'>
    <input type='submit' value='Update'>
    </form>
  </li>
  {{/each}}
</ul>
<form action="/posts/sorted" method="get"> 
  <input type="submit" value="Sort">
</form>
<a class="new-post-link" href="/posts/new">New post</a>

<form id="log-out-form" action="/users/logout" method="post">
  <button value = "Log Out">Log out</button>
</form>
<h1 class='title'>{{title}}</h1>

<p> Welcome to {{title}}</p>

<form action="/" method="POST">
  <input name="username" type="text" placeholder="Enter username here">
  <input name="password" type="password" placeholder="Enter password here"> 
  <input type="submit" value="Submit">
</form>